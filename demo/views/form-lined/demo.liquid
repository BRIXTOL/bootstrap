<div class="row mb-5">
  <div class="col-12">
    {{ item.describe }}
  </div>
</div>

<div class="row mb-2">

  <div class="col-12">
    <h6 class="mb-3 fw-bold">
      Input Horizontal Rule
    </h6>
    <div class="row mb-3">
      {% for item in item.classes.inputs %}
        <div class="col-5 mb-3">
          <pre class="m-0 pl-4"><code>{{ item.class }}</code></pre>
        </div>
        <div class="col-5 pl-5">
          <input
            class="{{ item.class | remove: '.' }}"
            placeholder="{{ item.title }}"
            type="text">
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="col-12">
    <h6 class="mb-3 fw-bold">
      Select Lined
    </h6>
    <div class="row mb-3">
      {% for item in item.classes.selects %}
        <div class="col-5 mb-3">
          <pre class="m-0 pl-4""><code>{{ item.class }}</code></pre>
        </div>
        <div class="col-5 pl-5">
          <select class="{{ item.class | remove: '.' }}" id="{{ item.title | slug }}">
            <option value="1">
              Option 1
            </option>
            <option value="2">
              Option 2
            </option>
            <option value="3">
              Option 3
            </option>
          </select>
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="col-12">
    <h6 class="mb-3 fw-bold">
      Dropdown Lined
    </h6>
    <div class="row mb-3">
      {% for item in item.classes.dropdowns %}
        <div class="col-5 mb-3">
          <pre class="m-0 pl-3"><code>.fm-group .fm-lined > {{ item.input }}</code></pre>
        </div>
        <div class="col-5 pl-5 mb-3">
          <div class="fm-group fm-lined">

            <div class="{{ item.class | remove: '.' }}">
            <button class="btn btn-dropdown" type="button">
              {{ item.title }}
            </button>
            <div class="dropdown-list {% if item.title contains 'Disabled' %}disabled{% endif %}">
              <ul>
                <li class="fm-option"></li>
              </ul>
            </div>
          </div>

          </div>
        </div>

      {% endfor %}
    </div>
  </div>


  <div class="col-12">
    <h6 class="mb-3 fw-bold">
      Button Lined Groups
    </h6>
    <div class="row mb-3">
      {% for item in item.classes.groups.buttons %}
        <div class="col-5 mb-3">
          <pre class="m-0 pl-3"><code>.fm-group .fm-lined > {{ item.input }}</code></pre>
        </div>
        <div class="col-5 pl-5 mb-3">
          <div class="fm-group fm-lined">

            {%- if forloop.first -%}
              <button
                class="btn"
                id="button-addon1"
                type="button">
                Button
              </button>
              <input
                class="fm-input"
                placeholder="{{ item.title }}"
                type="text">
            {%- else -%}
              <input
                class="{{ item.input | remove: '.' }}"
                placeholder="{{ item.title }}"
                type="text">
              <button
                class="btn"
                id="button-addon"
                type="button"
                {% if item.button == "disabled" %}
                disabled
                {% endif %}>
                Button
              </button>
            {%- endif -%}

          </div>
        </div>

      {% endfor %}
    </div>
  </div>


  <div class="col-8">
    <h6 class="mb-3 fw-bold">
      Select Lined Groups
    </h6>
    <div class="row mb-3">
      {% for item in item.classes.groups.buttons %}
        <div class="col-6 mb-3">
          <pre class="m-0"><code>{{ item.class }}</code></pre>
        </div>
        <div class="col-6">
          <div class="fm-group fm-lined">

            {%- if forloop.first -%}
              <select class="fm-select" id="{{ item.title | slug }}">
                <option value="1">
                  One
                </option>
                <option value="2">
                  Two
                </option>
                <option value="3">
                  Three
                </option>
              </select>
              <input
                class="fm-input"
                placeholder="{{ item.title }}"
                type="text">
            {%- else -%}
              <input
                class="fm-input {{ item.class | remove: '.' }}"
                placeholder="{{ item.title }}"
                type="text">
                <button class="btn btn-dropdown">Dropdown</button>

            {%- endif -%}

          </div>
        </div>
      {% endfor %}
    </div>
  </div>

</div>
