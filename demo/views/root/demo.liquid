<!-- @prettify-ignore -->
{% highlight html %}
<style>
:root {

  /*
  * BASE COLORS
  */
  --black: #000;
  --white: #fff;
  --white-rgb: 255, 255, 255;
  --black-rgb: 0, 0, 0;

  /*
  * COLOR PALETTE
  */
  --blue: #0d6efd;
  --indigo: #6610f2;
  --purple: #6f42c1;
  --pink: #d63384;
  --red: #dc3545;
  --orange: #fd7e14;
  --yellow: #ffc107;
  --green: #198754;
  --teal: #20c997;
  --cyan: #0dcaf0;

  /*
  * GRAYSCALE
  */
  --gray: #6c757d;
  --gray-dark: #343a40;
  --gray-100: #f8f9fa;
  --gray-200: #e9ecef;
  --gray-300: #dee2e6;
  --gray-400: #ced4da;
  --gray-500: #adb5bd;
  --gray-600: #6c757d;
  --gray-700: #495057;
  --gray-800: #343a40;
  --gray-900: #212529;

  /*
   * FONT STYLE
   */
  --font-base: {{ settings.font_base }};
  --font-heading: {{ settings.font_heading }};
  --font-code: {{ settings.font_code }};

 /*
  * BODY STYLE
  */
  --body-font-size: {{ settings.body_font_size }};
  --body-font-weight: {{ settings.body_font_weight }};
  --body-line-height: {{ settings.body_line_height }};
  --body-color: {{ settings.body_color }};
  --body-bg: {{ settings.body_bg }};
  --body-color-rgb: {{ settings.body_color | color_to_rgb }};
  --body-bg-rgb: {{ settings.body_bg | color_to_rgb }};

 /*
  * LETTER SPACING
  */
  --letter-spacing-base: {{ settings.letter_spacing_base }};
  --letter-spacing-heading: {{ settings.letter_spacing-heading }};

 /*
  * BORDER STYLES
  */
  --border: {{ settings.border }};
  --border-width: {{ settings.border_width }};
  --border-style: {{ settings.border_style }};
  --border-color: {{ settings.border_color }};
  --border-radius: {{ settings.border_radius }};
  --border-radius-sm: {{ settings.border_radius_sm }};
  --border-radius-lg: {{ settings.border_radius_lg }};
  --border-radius-xl: {{ settings.border_radius_xl }};
  --border-radius-pill: {{ settings.border_radius_pill }};

 /*
  * TOOLTIP STYLE
  */
  --tooltip-border-radius: {{ settings.tooltip_border_radius }};
  --tooltip-bg: {{ settings.tooltip_bg }};
  --tooltip-color: {{ settings.tooltip_color }};
  --tooltip-font-size: {{ settings.tooltip_font_size }};
  --tooltip-font-family: {{ settings.tooltip_font_family }};
  --tooltip-font-style: {{ settings.tooltip_font_style }};
}
</style>
{% endhighlight%}
