{% for item in item.classes %}
  <div class="row ai-center mb-2">
    <div class="col-3">
      <pre class="m-1"><code>{{ item.class }}</code></pre>
    </div>
    <div class="col-2 p-2  {{ item.class | remove_first: '.' }} text-center">
      {%- if item.class == ".bg-black" -%}
        <span class="p-3 fc-white">
          {{ item.title }}
        </span>
      {%- else -%}
        <span class="p-3">
          {{ item.title }}
        </span>
      {%- endif -%}

    </div>
  </div>
{% endfor %}
