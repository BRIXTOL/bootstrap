---
title: BRIXTOL | BOOTSTRAP
views:
  - demo
  - scss
  - html
refs:
  - fonts
  - text
  - utilities
  - forms
  - components
---


<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>{{ title }}</title>

    <link
      content="stylesheet"
      href="./bootstrap.css"
      rel="stylesheet">
    <link
      content="stylesheet"
      href="./style.css"
      rel="stylesheet">

    <script defer src="./bundle.global.js"></script>

  </head>
  <body>
    <div class="container-fluid gx-0">
      <div class="row gx-0 jc-center vh-100">
        <div class="col-2 br bg-white">
          <div
            class="relapse lined"
            data-relapse-multiple="false"
            data-relapse-persist="true"
            id="sidebar">

            {% for data in refs %}

              {% liquid
                # GET THE DATA REFERENCES
                case data
                  when "fonts"
                    assign list = fonts.data
                  when "text"
                    assign list = text.data
                  when "utilities"
                    assign list = utilities.data
                  when "forms"
                    assign list = forms.data
                  when "components"
                    assign list = components.data
                endcase
              %}

              <button class="relapse-btn upper fs-sm py-3 pl-4 fw-bold" type="button">
                {{ data }}
              </button>

              <div class="relapse-fold">
                <div class="d-block p-3">
                  {% for item in list %}
                    <a
                      class="d-block mb-1 upcase"
                      href="{{ item.title | slugify | prepend: '#' }}"
                      id="{{ item.title }}">
                      {{ item.title }}
                    </a>
                  {% endfor %}
                </div>
              </div>

            {% endfor %}

          </div>
        </div>

        <div class="col-10 mb-5 bg-white">
          <div class="d-block py-3 px-5 bg-white" id="search">
            <input
              type="search"
              id="search-input"
              placeholder="Search property or class name"
              class="fm-input">
          </div>
          <div class="relapse lined px-5" id="content">

            {% for data in refs %}

              {% liquid
                # GET THE DATA REFERENCES
                case data
                  when "fonts"
                    assign list = fonts.data
                  when "text"
                    assign list = text.data
                  when "utilities"
                    assign list = utilities.data
                  when "forms"
                    assign list = forms.data
                  when "components"
                    continue
                  #  assign list = components.data
                endcase
              %}

              {% for item in list %}
                {% assign slug = item.title | slug %}

                {% for view in views %}

                  {% if forloop.first %}
                    <button type="button" class="relapse-btn d-flex ai-center mt-5 h3 fw-bold no-icon initial">
                      <span class="mr-auto">{{ item.title }}</span>
                      {% if item.responsive %}
                        <code class="lower fc-green">responsive</code>
                        <span class="fc-gray px-4 fs-sm">|</span>
                      {% endif %}
                      <code class="lower">{{ item.property }}</code>
                    </button>
                  {% else %}
                    <button type="button" class="relapse-btn h6 fw-bold fc-gray py-3 {% if forloop.last %}initial bb-0{% endif %}">
                      {{ item.title | append: " " | append: view }}
                    </button>
                  {% endif %}

                  <div
                    class="relapse-fold bg-white"
                    id="{{ slug }}"
                    style="margin-top: 100px;">
                    <div class="container-fluid gx-0 {% if forloop.first %}py-4{% else %}py-1{% endif %}">
                      {% assign template = slug | append: "/" | append: view %}
                      {% render template, item: item %}
                    </div>
                  </div>

                {% endfor %}
              {% endfor %}
            {% endfor %}
          </div>


        </div>
      </div>
    </div>
  </body>
</html>
