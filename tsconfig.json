{
  "exclude": [
    "node_modules/**",
    "test",
    "docs"
  ],
  "include": [
    "demo"
  ],
  "compilerOptions": {
    "target": "ES6",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outFile": "index.d.ts",
    "module": "ES6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "pretty": true,
    "baseUrl": ".",
  }
}